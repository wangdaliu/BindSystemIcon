<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<RelativeLayout
			android:id="@+id/bind_contact_layout"
			android:layout_width="match_parent"
			android:layout_height="60dp">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="30dp"
				android:text="@string/bind_contact">
		</TextView>

		<Switch
				android:id="@+id/bind_contact"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="30dp"/>
	</RelativeLayout>

	<RelativeLayout
			android:id="@+id/bind_call_layout"
			android:layout_width="match_parent"
			android:layout_below="@id/bind_contact_layout"
			android:layout_height="60dp">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="30dp"
				android:text="@string/bind_call">
		</TextView>
		<Switch
				android:id="@+id/bind_call"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="30dp"
				/>

	</RelativeLayout>


	<RelativeLayout
			android:id="@+id/bind_mms_layout"
			android:layout_width="match_parent"
			android:layout_below="@id/bind_call_layout"
			android:layout_height="60dp">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="30dp"
				android:text="@string/bind_mms">
		</TextView>
		<Switch
				android:id="@+id/bind_mms"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="30dp"/>
	</RelativeLayout>


</RelativeLayout>